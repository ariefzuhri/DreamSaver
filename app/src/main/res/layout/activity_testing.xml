<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".testing.TestingActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/tv_title_regular_testing"
        style="@style/TextView.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_nm"
        android:text="Text Regular NM"/>

    <TextView
        android:id="@+id/tv_title_medium_testing"
        style="@style/TextView.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_md"
        android:text="Text Medium MD"/>

    <TextView
        android:id="@+id/tv_title_bold_testing"
        style="@style/TextView.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_lg"
        android:text="Text Bold LG"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_send_notification_testing"
            style="@style/Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kirim notifikasi"
            android:layout_weight="1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.9"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_enable_reminder_testing"
            style="@style/Button.Outline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hidupkan reminder"
            android:layout_weight="1"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next_intro_testing"
        style="@style/Button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_intro_next"
        android:drawableEnd="@drawable/ic_baseline_chevron_right_24_white"
        android:textColor="@color/white"
        android:text="Mulai"/>

    <ImageButton
        android:id="@+id/btn_prev_intro_testing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_intro_prev" />

    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:id="@+id/dots_indicator_intro_testing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:dotsColor="@color/gray"
        app:dotsCornerRadius="8dp"
        app:dotsSize="8dp"
        app:dotsSpacing="4dp"
        app:dotsWidthFactor="2.5"
        app:selectedDotColor="@color/black"
        app:progressMode="true" />

    <EditText
        android:id="@+id/edt_test_testing"
        style="@style/EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Edit Text Testing"
        android:background="@drawable/bg_edit_text_main"
        android:imeOptions="actionDone"
        android:inputType="textPersonName|textCapSentences"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_disable_reminder_testing"
        style="@style/Button.Outline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Matikan reminder"
        android:layout_marginTop="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_database_testing"
        style="@style/Button.Outline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coba database"
        android:layout_marginTop="8dp"/>
</LinearLayout>